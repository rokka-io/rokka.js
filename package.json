{
  "name": "rokka",
  "version": "1.2.0",
  "description": "JavaScript client library for rokka.io",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run ava",
    "lint": "./node_modules/.bin/eslint .",
    "ava": "ava test/**",
    "coverage": "BABEL_ENV=coverage nyc npm run ava",
    "coveralls": "npm run coverage; nyc report --reporter=text-lcov | coveralls",
    "docs": "cd ./docs; node generate.js",
    "compile": "BABEL_ENV=production babel -d lib/ src/",
    "prepare": "npm run compile",
    "watch": "babel -watch -d lib/ src/",
    "fix": "prettier-eslint --write '{src,test}/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rokka-io/rokka.js.git"
  },
  "keywords": [
    "rokka",
    "client",
    "browser",
    "node.js"
  ],
  "author": "Patrick Stadler <patrick.stadler@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rokka-io/rokka.js/issues"
  },
  "homepage": "https://github.com/rokka-io/rokka.js#readme",
  "dependencies": {
    "promise-retry": "^1.1.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "markdox": "^0.1.10",
    "nyc": "^14.1.1",
    "prettier": "^1.14.3",
    "prettier-eslint-cli": "^4.7.1",
    "testdouble": "^3.8.1"
  },
  "ava": {
    "require": [
      "babel-core/register"
    ],
    "babel": "inherit",
    "failWithoutAssertions": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run docs && npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "npx prettier-eslint --write --",
      "git add"
    ]
  }
}
