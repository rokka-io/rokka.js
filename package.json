{
  "name": "rokka",
  "version": "0.20.0",
  "description": "JavaScript client library for rokka.io",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run ava",
    "lint": "./node_modules/.bin/eslint .",
    "ava": "ava test/**",
    "coverage": "nyc npm run ava",
    "coveralls": "npm run coverage; nyc report --reporter=text-lcov | coveralls",
    "docs": "cd ./docs; node generate.js",
    "compile": "./node_modules/.bin/babel -d lib/ src/",
    "prepublish": "npm run compile"
  },
  "precommit": [
    "docs",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rokka-io/rokka.js.git"
  },
  "keywords": [
    "rokka",
    "client",
    "browser",
    "node.js"
  ],
  "author": "Patrick Stadler <patrick.stadler@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rokka-io/rokka.js/issues"
  },
  "homepage": "https://github.com/rokka-io/rokka.js#readme",
  "dependencies": {
    "promise-retry": "^1.1.1",
    "request": "^2.79.0",
    "request-promise": "^4.0.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "coveralls": "^2.12.0",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "markdox": "^0.1.10",
    "nyc": "^10.1.2",
    "pre-commit": "^1.1.3",
    "testdouble": "^2.0.4"
  },
  "peerDependencies": {
    "babel-polyfill": "^6.3.14"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
