{
  "name": "rokka",
  "version": "3.17.0",
  "description": "JavaScript client library for rokka.io",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.min.js",
  "jsdelivr": "dist/index.umd.min.js",
  "files": [
    "/dist/*",
    "/src/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "npm run lint && npm run jest && npm run typecheck:examples",
    "lint": "eslint '{src,tests,docs}/**/*.{js,ts}'",
    "lint:fix": "eslint '{src,tests,docs}/**/*.{js,ts}'  --fix",
    "jest": "jest",
    "coverage": "BABEL_ENV=coverage npm run jest -- --coverage",
    "docs": "node ./docs/generate.mjs",
    "compile": "rm -rf ./dist && rollup -c",
    "prepare": "husky install",
    "watch": "rollup -c -w",
    "typecheck:examples": "tsc --noEmit --esModuleInterop --allowSyntheticDefaultImports --strict examples/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rokka-io/rokka.js.git"
  },
  "keywords": [
    "rokka",
    "client",
    "browser",
    "node.js"
  ],
  "author": "Patrick Stadler <patrick.stadler@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rokka-io/rokka.js/issues"
  },
  "homepage": "https://github.com/rokka-io/rokka.js#readme",
  "dependencies": {
    "cross-fetch": "^3.2.0",
    "form-data": "^4.0.5",
    "jwt-decode": "^3.1.2",
    "query-string": "^7.1.3",
    "rokka-render": "^0.10.2",
    "simple-js-sha2-256": "^1.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/btoa": "^1.2.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nock": "^13.5.6",
    "prettier": "^2.8.8",
    "rollup": "^2.79.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  }
}
